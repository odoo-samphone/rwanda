<odoo>
	<data>
		<record model="ir.module.category" id="module_category_sales_commission">
            <field name="name">Commission</field>
            <field name="description">Helps you handle your Sales commission.</field>
            <field name="sequence">1</field>
        </record>

		 <record id="group_sale_commission_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">the user will have an access to the sales commission configuration .</field>
            <field name="category_id" ref="sale_commission_axis.module_category_sales_commission"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

		 <record id="group_sale_commission_user" model="res.groups">
            <field name="name">Users</field>
            <field name="category_id" ref="sale_commission_axis.module_category_sales_commission"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access read only commission data.</field>
        </record>
	</data>
</odoo>