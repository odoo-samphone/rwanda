<odoo>
	<data>

        <record model="ir.ui.view" id="inherit_sale_order_view">
            <field name="name">inherit.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="config_sale_commission"/>
                    <field name="sale_commission" attrs="{'invisible': [('config_sale_commission', '=', False)]}"/>
                </xpath>

                <xpath expr="//notebook[last()]" position="inside">
                    <field name="sale_commi_bool" invisible="1"/>
                 <page string="Sales Commission" name="sale_commi" attrs="{'invisible': [('sale_commi_bool', '=', False)]}">
                        <field name="commission_line_ids">
                            <tree string="Commission" create="false" delete="false" edit="false">
                                <field name="date"/>
                                <field name="user_id"/>
                                <field name="description"/>
                                <field name="product_id"/>
                               	<field name="amount" sum="Total Amount"/>
                               	<field name="order_id" invisible="1"/>
                            </tree>
                        </field>
                 </page>
             </xpath>
         </field>
     </record>

	</data>
</odoo>