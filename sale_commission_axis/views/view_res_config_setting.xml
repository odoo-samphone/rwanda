<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="sale_commission_axis.res_config_settings_view_form" model="ir.ui.view">
     <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]/div[@data-key='sale_management']" position="inside">
    <h2 style="font-size: 30px;">Sale Commission</h2>
    <br/>

    
    <div class="row mt16 o_settings_container">
    <div class="col-12 col-lg-6 o_setting_box" id="sale_commission">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane" style="font-weight:bold;">
                                    <span class="o_form_label" style="font-size:22px;">Commission Based On</span>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div style="font-size:18px;font-weigh:bold;">
                                        Commission create based on Sale, Invoice or Payment.
                                    </div>
                                     <div style="font-size:18px;font-weigh:bold;">
                                        <field name="commission_based" widget="radio"/>
                                    </div>
                                </div>
                            </div>
        <div class="col-12 col-lg-6 o_setting_box" id="product">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label" style="font-size:22px;">Commission Based on Product</span>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div style="font-size:18px;font-weigh:bold;">
                                        Select Product/Product Category/Margin.
                                    </div>
                                     <div style="font-size:18px;font-weigh:bold;">
                                        <field name="product_commission_based_on"  widget="radio"/>
                                    </div>
                                </div>
             <div class="o_setting_right_pane">
                                    <span class="o_form_label" style="font-size:22px;">Commission Based on Product with</span>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div style="font-size:18px;font-weigh:bold;">
                                        Select product commision based on fix/Margin/Commission Exception.
                                    </div>
                                     <div  style="font-size:22px; font-weigh:bold;">
                                        <field name="product_commission_with_type"   widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>
</xpath>

        </field>
    </record>

</odoo>

