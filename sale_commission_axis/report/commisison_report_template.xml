<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="report_commissionsummary">
    <t t-call="web.html_container">
        <t t-call="web.internal_layout">
            <div class="page">
                <t t-foreach="docs" t-as="doc">
                    <div class="image-banner">
                    <a class="navbar-brand">
                        <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 100px;" alt="Logo"/>
                    </a>
                </div>
                    <div class="company_nm">
                    <h3 class="mb32"><span t-field="doc.company_id.name"/></h3>
                    </div>
                    <h3 class="text-center  mb32">Commission Report</h3>
                    <table>
                        <tr>
                            <th>Start Date:</th>
                            <td><t t-esc="doc.start_date"/></td>
                        </tr>
                        <tr>
                            <th>End Date:</th>
                            <td><t t-esc="doc.end_date"/></td>
                        </tr>
                        <tr>
                            <th>Based On</th>
                            <td><t t-esc="doc.commission"/></td>
                        </tr>
                    </table>
                     <div class="data">
                         <table class="table table-condensed">
                             <thead>
                                 <th>Date</th>
                                 <th>Sales Person</th>
                                 <th>Commission Type</th>
                                 <th>Sale Order</th>
                                 <th>Invoice</th>
                                 <th>Payment</th>
                                 <th>Amount</th>
                             </thead>
                             <t t-set="number" t-value="0"/>
                    <t t-foreach="get_data" t-as="line_data">

                        <tbody>
                            <tr>
                                <td><t t-esc="line_data['date']"/></td>
                                <td><t t-esc="line_data['salesperson']"/></td>
                                <td><t t-esc="line_data['commission']"/></td>
                                <td><t t-esc="line_data['order_id']"/></td>
                                <td><t t-esc="line_data['invoice_id']"/></td>
                                <td><t t-esc="line_data['payment_id']"/></td>
                                <td><t t-esc="line_data['amount']"/></td>
                            </tr>
                        </tbody>

                    </t>
                         </table>

                     </div>
                </t>
            </div>
        </t>
    </t>
</template>

</odoo>
